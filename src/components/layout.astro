  description?: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" data-new-ui-theme="dark">
  <head>
    <Meta title={title ? `${title} Â· ${SITE_TITLE}` : SITE_TITLE} description={description ?? SITE_DESCRIPTION} />
  </head>
  <body>
    <div>
      <Header />
      <div>
        <slot />
      </div>
      <Footer />
    </div>
